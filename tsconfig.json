{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "target": "ES2018",
    "noImplicitAny": false,
    "preserveConstEnums": true,
    // "outDir": "./build",
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "*/node_modules/**/*",
    "tst",
    "coverage",
    "local"
  ]
}